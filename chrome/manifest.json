  {
    "name": "Github PR+",
    "version": "1.0",
    "description": "Enhanced Github PR reviews",
    "permissions": ["activeTab", "clipboardWrite", "declarativeContent", "management", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
      "matches": ["https://*.github.com/*"],
      "js": ["app.js", "react-ui.js"],
      "css": ["app/styles/global.css", "app/styles/palette-styles.css"]
    }],
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },    
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "manifest_version": 2
  }
