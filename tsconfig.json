{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "node",
    "plugins": [
      {"name": "typescript-lit-html-plugin"}
    ],
    "rootDir": ".",
    "outDir": "./build/ts",
    "strict": true,
    "target": "ESNext",
    "module":  "ESNext"
  },
  "include": ["app/**/*.ts"]
}
